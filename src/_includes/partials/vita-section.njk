<section class="experience">
    <h2>{{vitaSectionName}}</h2>
    <ul>
        {% for item in vitaSectionData | reverse %}
            {% if item.promotion %}
                <div class="title">
                    <li class="promotion">
                <div class="date">

                        <time datetime="{{ item.promotionStart | date('Y-MM-DD') }}">{{ item.promotionStart | date("MMM Y", locale) }}</time>
                        {% if item.promotionEnd%}
                            <span class="date-separator"> - </span>
                            <time datetime="{{ item.promotionEnd | date('Y-MM-DD') }}">{{ item.promotionEnd | date("MMM Y", locale) }}</time>
                        {% endif %}
                    </div>
                    <div class="content">

                        <div class="title">
                            {{item.promotion}}
                        </div>
                    </li>
                </div>
            {% endif %}

            <li>
                <div class="date">
                    {# {% if not item.end %}
                        <div>Seit</div>
                        {% endif%} #}
                        <time datetime="{{ item.start | date('Y-MM-DD') }}">{{ item.start | date("MMM Y", locale) }}</time>
                        {% if item.end%}
                            <span class="date-separator"> - </span>
                            <time datetime="{{ item.end | date('Y-MM-DD') }}">{{ item.end | date("MMM Y", locale) }}</time>
                        {% endif %}
                        {% if item.weekhours %}
                            <div class="weekhours">{{item.weekhours}}h/Woche</div>
                        {% endif %}
                        {% if item.timeframe %}
                            <div class="weekhours">{{item.timeframe}}</div>
                        {% endif %}
                    </div>
                    <div class="content">

                        <div class="title">
                            {{item.title}}
                        </div>
                        <div class="employer">
                            {{item.employer}}
                            {% if item.employer%} - {% endif%}
                                {{item.location}}
                        </div>
                            {% if item.grade %}
                                <div class="grade">
                                Abschlussnote {{item.grade}}
                                </div>
                            {% endif %}
                            {% if item.description %}
                                <div class="description">
                                    {{item.description}}
                                </div>
                            {% endif %}
                        </div>
                    </li>
                    {% endfor%}
                </ul>
            </section>